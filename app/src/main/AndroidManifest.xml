<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.currency">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_my_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_my_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Currency">
        <activity android:name=".ui.notes.NotesActivity"></activity>
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.sign_up.SignUpActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.converter.ConverterActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>